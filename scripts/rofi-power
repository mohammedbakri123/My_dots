#!/bin/bash
# Rofi Power Menu

options="ðŸ”’ Lock
ðŸšª Logout
ðŸ’¤ Suspend
ðŸ”„ Reboot
ðŸ›‘ Shutdown"

chosen=$(echo -e "$options" | rofi -dmenu -i -p "Power" -theme-str 'window {width: 15%;}')

case "$chosen" in
    "ðŸ”’ Lock")
        hyprlock
        ;;
    "ðŸšª Logout")
        confirm=$(echo -e "Yes\nNo" | rofi -dmenu -i -p "Confirm logout?" -theme-str 'window {width: 15%;}')
        if [ "$confirm" = "Yes" ]; then
            hyprctl dispatch exit
        fi
        ;;
    "ðŸ’¤ Suspend")
        confirm=$(echo -e "Yes\nNo" | rofi -dmenu -i -p "Confirm suspend?" -theme-str 'window {width: 15%;}')
        if [ "$confirm" = "Yes" ]; then
            systemctl suspend
        fi
        ;;
    "ðŸ”„ Reboot")
        confirm=$(echo -e "Yes\nNo" | rofi -dmenu -i -p "Confirm reboot?" -theme-str 'window {width: 15%;}')
        if [ "$confirm" = "Yes" ]; then
            systemctl reboot
        fi
        ;;
    "ðŸ›‘ Shutdown")
        confirm=$(echo -e "Yes\nNo" | rofi -dmenu -i -p "Confirm shutdown?" -theme-str 'window {width: 15%;}')
        if [ "$confirm" = "Yes" ]; then
            systemctl poweroff
        fi
        ;;
esac
